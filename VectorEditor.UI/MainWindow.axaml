<Window
    x:Class="VectorEditor.UI.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:material="using:Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Vector Editor"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">
    <Grid>
        <Grid
            ColumnDefinitions="50,*,250"
            RowDefinitions="50,*"
            ShowGridLines="True">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Click="ToggleMenu">
                <material:MaterialIcon
                    Width="20"
                    Height="20"
                    Foreground="White"
                    Kind="Menu" />
            </Button>
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Orientation="Vertical">
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="Navigation" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="Select" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="Brush" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="VectorLine" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="VectorSquare" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="CircleOutline" />
                </Button>
                <Button Click="SelectTool">
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="ShapePolygonPlus" />
                </Button>
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <Button>
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="Undo" />
                </Button>
                <Button>
                    <material:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="White"
                        Kind="Redo" />
                </Button>
                <Button Click="SelectColor">
                    â¬œ
                </Button>
                <Button Click="SelectColor">
                    â¬›
                </Button>
                <Button Click="SelectColor">
                    ðŸŸ¥
                </Button>
                <Button Click="SelectColor">
                    ðŸŸ©
                </Button>
                <Button Click="SelectColor">
                    ðŸŸ¦
                </Button>
                <Button Click="SelectColor">
                    ðŸŸ§
                </Button>
            </StackPanel>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                BorderBrush="Gray"
                BorderThickness="2">
                <Canvas x:Name="MyDrawingCanvas" Background="White" />
            </Border>
            <StackPanel
                Grid.Row="1"
                Grid.Column="2"
                Orientation="Vertical">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Layers" />
                <Border
                    Padding="10"
                    Background="#2D2D30"
                    BorderBrush="#3E3E42"
                    BorderThickness="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="195"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Text="Layers" />
                        <Button Click="ToggleLayer">
                            <material:MaterialIcon
                                Width="20"
                                Height="20"
                                Foreground="White"
                                Kind="Eye" />
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Grid
            x:Name="MenuOverlay"
            Background="#AA000000"
            ColumnDefinitions="320,*"
            IsVisible="False"
            RowDefinitions="50,*">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Click="ToggleMenu">
                <material:MaterialIcon
                    Width="20"
                    Height="20"
                    Foreground="White"
                    Kind="Menu" />
            </Button>
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Width="300"
                Height="400"
                HorizontalAlignment="Center"
                Background="#2D2D30"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">

                <StackPanel Spacing="10">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Main Menu" />
                    <Button HorizontalAlignment="Stretch" Content="Save Project" />
                    <Button HorizontalAlignment="Stretch" Content="Load Project" />
                    <Button HorizontalAlignment="Stretch" Content="Export (SVG)" />
                    <Button HorizontalAlignment="Stretch" Content="Export (JPG)" />
                    <Button HorizontalAlignment="Stretch" Content="Export (PNG)" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
